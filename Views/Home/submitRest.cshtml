
@{
    ViewBag.Title = "Enter your Favorite Restaurants";
}

@model resturants.Models.UserRestaurants;

<form class="form-horizontal" asp-action="submitRest" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label col-sm-2">Name:</label>
        <div class="col-sm-10">
            <input required class="form-control" asp-for="Name" placeholder="Your Name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="RestaurantName">Restaurant Name</label>
        <div class="col-sm-10">
            <input required asp-for="RestaurantName" class="form-control" placeholder="Restaurant Name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="favDish">Favorite Dish</label>
        <div class="col-sm-10">
            <input asp-for="favDish" class="form-control" placeholder="Cheese Burger">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="PhoneNum">Restaurant Phone Number</label>
        <div class="col-sm-10">
            <input required asp-for="PhoneNum" class="form-control" placeholder="(801) 123-4567">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
